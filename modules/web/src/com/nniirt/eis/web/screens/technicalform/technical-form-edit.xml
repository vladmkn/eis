<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://technicalFormEdit.caption"
        focusComponent="form"
        messagesPack="com.nniirt.eis.web.screens.technicalform">
    <data>
        <instance id="technicalFormDc"
                  class="com.nniirt.eis.entity.qs.TechnicalForm">
            <view extends="_local">
                <property name="component" view="_minimal"/>
                <property name="product" view="_minimal"/>
                <property name="commission" view="_local">
                    <property name="member" view="_local">
                        <property name="jobTitle" view="_local"/>
                    </property>
                </property>
                <property name="defectDivision" view="_minimal"/>
                <property name="conclusion" view="_local"/>
                <property name="files" view="_local"/>
            </view>
            <loader/>
            <collection id="commissionDc" property="commission"/>
            <collection id="conclusionDc" property="conclusion"/>
            <collection id="filesDc" property="files"/>
        </instance>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="technicalFormDc">
            <column width="500px">
                <pickerField id="defectDivisionField" property="defectDivision"/>
                <textField id="documentNumField" property="documentNum"/>
                <pickerField id="componentField" property="component"/>
                <textField id="quantityField" property="quantity" colspan="2"/>
                <pickerField id="productField" property="product"/>
                <textField id="masterComponentDefinitionField" property="masterComponentDefinition"/>
                <textArea rows="2" id="manufacturerField" property="manufacturer"/>
                <textField id="assemblyNumField" property="assemblyNum"/>
                <dateField id="warrantyStartDateField" property="warrantyStartDate" colspan="2"/>
                <textField id="warrantyPeriodField" property="warrantyPeriod" colspan="2"/>
                <dateField id="defectDateField" property="defectDate" colspan="2"/>
                <textArea rows="5" id="defectConditionsField" property="defectConditions"/>
                <textArea rows="5" id="defectCauseField" property="defectCause"/>
            </column>
            <column width="500px">
                <checkBox id="externalDocumentField" property="externalDocument"/>
                <dateField id="documentDateField" property="documentDate"/>
                <textField id="componentNumberField" property="componentNumber"/>
                <textField id="productNumberField" property="productNumber"/>
                <textField id="masterComponentNumberField" property="masterComponentNumber"/>
                <textArea rows="2" id="contractField" property="contract"/>
                <textArea rows="2" id="providerField" property="provider"/>
                <textArea rows="5" id="defectDefinitionField" property="defectDefinition"/>
                <textArea rows="5" id="inspectionResultsField" property="inspectionResults"/>
            </column>
        </form>
        <groupBox id="conclusionBox" caption="msg://com.nniirt.eis.entity.qs/TechnicalForm.conclusion">
            <table id="conclusionTable" dataContainer="conclusionDc" width="100%" height="200px">
                <actions>
                    <action id="create" type="create"/>
                    <action id="edit" type="edit"/>
                    <action id="remove" type="remove"/>
                </actions>
                <columns>
                    <column id="definition"/>
                    <column id="finaldate"/>
                    <column id="address"/>
                    <column id="recipient"/>
                    <column id="fax"/>
                    <column id="phone"/>
                </columns>
                <buttonsPanel>
                    <button action="conclusionTable.create"/>
                    <button action="conclusionTable.edit"/>
                    <button action="conclusionTable.remove" stylename="danger"/>
                </buttonsPanel>
            </table>
        </groupBox>
        <groupBox id="commissionBox" caption="msg://com.nniirt.eis.entity.qs/TechnicalForm.commission">
            <table id="commissionTable" dataContainer="commissionDc" width="100%" height="200px">
                <actions>
                    <action id="create" type="create"/>
                    <action id="edit" type="edit"/>
                    <action id="remove" type="remove"/>
                </actions>
                <columns>
                    <column id="member"/>
                    <column id="member.jobTitle"/>
                </columns>
                <buttonsPanel>
                    <button action="commissionTable.create"/>
                    <button action="commissionTable.edit"/>
                    <button action="commissionTable.remove" stylename="danger"/>
                </buttonsPanel>
            </table>
        </groupBox>
        <groupBox id="filesBox" caption="msg://com.nniirt.eis.entity.qs/TechnicalForm.files">
            <buttonsPanel>
                <upload id="upload"
                        dropZone="contentHBox"
                        showClearButton="false"
                        uploadButtonIcon="UPLOAD"
                        uploadButtonCaption=""
                        fileStoragePutMode="MANUAL"
                        permittedExtensions=".png,.jpg,.pdf,.doc,.docx"
                        showFileName="false"/>
                <button action="filesTable.download"/>
                <button action="filesTable.remove"/>
            </buttonsPanel>
            <hbox id="contentHBox" spacing="true" width="100%">
            <table id="filesTable" dataContainer="filesDc" width="100%" height="200px">
                <actions>
                    <action id="add" type="add"/>
                    <action id="remove" type="remove"/>
                    <action id="edit" type="edit"/>
                    <action id="exclude" type="exclude"/>
                    <action id="download" trackSelection="true" icon="DOWNLOAD"/>
                </actions>
                <columns>
                    <column id="name"/>
                    <column id="extension"/>
                    <column id="size"/>
                    <column id="createDate"/>
                    <column id="sysTenantId"/>
                </columns>
            </table>
                <hbox id="filesTableWrapperLayout"
                      height="100%"
                      width="100%"
                      spacing="true">
                </hbox>
            </hbox>
        </groupBox>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
