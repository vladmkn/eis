<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://imbaseCatalogBrowse.caption"
        focusComponent="imbaseCatalogsTable"
        messagesPack="com.nniirt.eis.web.screens.imbasecatalog">
    <data readOnly="true">
        <collection id="imbaseCatalogsDc"
                    class="com.nniirt.eis.entity.ImbaseCatalog">
            <view extends="_local"/>
            <loader id="imbaseCatalogsDl">
                <query>
                    <![CDATA[select e from eis_ImbaseCatalog e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="imbaseCatalogsTable"
            spacing="true">
        <filter id="filter"
                applyTo="imbaseCatalogsTable"
                dataLoader="imbaseCatalogsDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="imbaseCatalogsTable"
                    width="100%"
                    dataContainer="imbaseCatalogsDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="fullname"/>
                <column id="catalogname"/>
                <column id="folderpath"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="imbaseCatalogsTable.create"/>
                <button id="editBtn" action="imbaseCatalogsTable.edit"/>
                <button id="removeBtn" action="imbaseCatalogsTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
