<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://imbaseCatalogEdit.caption"
        focusComponent="form"
        messagesPack="com.nniirt.eis.web.screens.imbasecatalog">
    <data>
        <instance id="imbaseCatalogDc"
                  class="com.nniirt.eis.entity.ImbaseCatalog">
            <view extends="_local"/>
            <loader/>
        </instance>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="imbaseCatalogDc">
            <column width="350px">
                <textField id="fullnameField" property="fullname"/>
                <textField id="catalognameField" property="catalogname"/>
                <textArea id="folderpathField" property="folderpath" rows="5"/>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
